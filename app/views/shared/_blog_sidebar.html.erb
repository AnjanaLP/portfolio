<div class="col-sm-3 offset-sm-1 blog-sidebar">
  <div class="sidebar-module sidebar-module-inset">
    <h4><%= link_to "Topics", topics_path %></h4>
      <div class="topic-links">
        <p><%= link_to "All", blogs_path %></p>
        <% @topics.each do |topic| %>
          <p><%= link_to topic.title, topic %></p>
        <% end %>
      </div>
  </div>

  <div class="sidebar-module">
    <h4>Elsewhere</h4>
    <ol class="list-unstyled social-links">
      <li><a href="https://github.com/AnjanaLP" target="blank"><%= fa_icon "github" %></a></li>
      <li><a href="https://www.twitter.com" target="blank"><%= fa_icon "twitter" %></a></li>
      <li><a href="https://www.facebook.com" target="blank"><%= fa_icon "facebook" %></a></li>
    </ol>
  </div>
</div>
